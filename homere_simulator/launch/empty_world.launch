    <!-- <node pkg="rosservice" type="rosservice" name="initialize_odometry" args="call \-\-wait /julie_gazebo_ackermann_controller/set_odometry 14 4 1 0"/> -->
    
    <!-- start joystick -->
    <!-- <include file="$(find rbcar_joystick)/launch/rbcar_joystick.launch"/> -->
<!--  </group> -->

</launch>
